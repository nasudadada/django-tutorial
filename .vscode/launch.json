{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Debug Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "env": {
                "DEBUG": "True"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "autoReload": {
                "enable": true
            }
        }
    ]
}
